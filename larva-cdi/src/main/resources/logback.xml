<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5p %d{HH:mm:ss} [%C.%M:%L] %m%n</pattern>
        </encoder>
    </appender>

    <logger name="larvae">
        <level value="debug" />
    </logger>
    <logger name="org.jboss.weld">
        <level value="info" />
    </logger>

    <root>
        <level value="warn" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
